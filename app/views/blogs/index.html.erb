<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= simple_time(blog.created_at) %></td>
    <td><%= link_to "詳細", blog_path(blog.id) %></td>
    <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
    <td><%= link_to "削除", blog_path(blog.id),
            method: :delete, data: { confirm: "本当に削除しますか" } %></td>
  </tr>
<% end %>
</table>
<%= link_to "ブログを作成する", new_blog_path %>
